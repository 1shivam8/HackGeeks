<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#5b97e7"
    tools:context=".MainActivity">

    <ImageView
        android:layout_marginTop="41dp"
        android:src="@drawable/yess"
        android:layout_marginLeft="150dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />




    <TextView
        android:layout_marginTop="30dp"
        android:text="ENTER THE TEXT"
        android:textSize="20dp"
        android:textColor="#031366"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <LinearLayout

        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <EditText
            android:textColor="#041fab"
            android:textSize="18dp"
            android:id="@+id/editText"
            android:layout_width="280dp"
            android:layout_height="wrap_content"
            android:hint="Enter Text"/>

        <Button
            android:id="@+id/imagebutton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@mipmap/aaaa"
            />
    </LinearLayout>



    <Button
        android:id="@+id/button"
        android:text="Search"
        android:textColor="#04ab95"
        android:background="@drawable/abcbutton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <Button
        android:textColor="#cc4a87"
        android:text="Learn Sign Language"
        android:id="@+id/nextpage"
        android:background="@drawable/abcbutton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />


    <ListView
        android:id="@+id/list"
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:divider="#b5b5b5"
        android:dividerHeight="1dp"
        android:scrollbars="horizontal"/>





</LinearLayout>